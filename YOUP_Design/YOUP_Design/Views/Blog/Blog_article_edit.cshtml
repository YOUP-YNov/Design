@{
    ViewBag.Title = "Blog_article_edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ActiveMenu = "Blog";
}

<div class="container">
    <div class="publicite well">
        Encart de publicité
    </div>
    @Html.Partial("~/Views/Blog/partialRechercheBlog.cshtml")
    <div class="row">
        <h2>Création / Edition Article</h2>
        <div class="panel-body">
            <form role="form" class="formProfil">
                <div class="form-group">
                    <label for="inputTitre">Titre</label>
                    <input type="text" class="form-control" id="inputTitre">
                </div>
                <div class="form-group">
                    <label for="select_event">Evènement </label>
                    <select name="select_event" class="form-control" id="select_event">
                        <option value="Event" selected>Evènement</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Image</label>
                    <input type="file" id="exampleInputFile">
                </div>
                <div class="form-group">
                    <label for="inputTags">Tags</label>
                    <input type="text" class="form-control" id="inputTags">
                    <p class="help-block">Merci de séparer les tags par des ";"</p>
                </div>
                <div class="form-group">
                    <label for="select_statut">Statut</label>
                    <select name="select_statut" class="form-control" id="select_statut">
                        <option value="actif" selected>Actif</option>
                    </select>
                </div>
                <center>
                    <h3>Ecris ton message :</h3>
                    <textarea name="editor1" id="editor1" rows="10" cols="80" class="input-sm"></textarea>
                    <script>
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            CKEDITOR.replace('editor1');
                    </script>
                </center>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Annuler</button>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>
