@{
    ViewBag.Title = "PubBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ActiveMenu = "Blog";
}

<div class="container">
    <div class="encartPoub well row">
        Encart de publicité
    </div>

    <div class="row">
        <div class="rechercheBlog">
            <div class="moduleRechercheBlog form-group input-group">
                <select name="select_categorie_blog" class="form-control" id="select_categorie_blog">
                    <option value="Categories" selected>Categories</option>
                </select>
                <input type="text" class="form-control" placeholder="Rechercher">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                </span>
            </div>
            <div class="btnGererBlog">
                <button type="submit" class="btn btn-default">Créer / Gérer mon Blog</button>
            </div>
        </div>
    </div>

</div>
