@{
    ViewBag.Title = "Blog_edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ActiveMenu = "Blog";
}
<div class="container">
    <div class="publicite well">
        Encart de publicité
    </div>
    @Html.Partial("~/Views/Blog/partialRechercheBlog.cshtml")
    <div class="row">
        <h2>Création / Edition Blog</h2>
        <div class="panel-body">
            <form role="form" class="formProfil">
                <div class="form-group">
                    <label for="inputTitre">Titre</label>
                    <input type="text" class="form-control" id="inputTitre">
                </div>
                <div class="form-group">
                    <label for="select_categorie_blog">Categorie </label>
                    <select name="select_categorie_blog" class="form-control" id="select_categorie_blog">
                        <option value="Categories" selected>Categories</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputTheme">Thème</label>
                    <input type="text" class="form-control" id="inputTheme">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="Blog_liste_article" class="btn btn-primary" role="button">Afficher les articles</a>
                    <button type="submit" class="btn btn-danger">Supprimer Blog</button>
                </div>
            </form>
        </div>
    </div>
</div>