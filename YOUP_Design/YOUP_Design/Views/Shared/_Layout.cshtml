<!DOCTYPE html>
<html lang="fr">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - YOUP</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @Styles.Render("~/Content/css/bootstrap.css")
        @Styles.Render("~/Content/css/animo.css")
        @Styles.Render("~/Content/css/font-awesome.css")
        @Styles.Render("~/Content/css/global.css")
        @Styles.Render("~/Content/css/home.css")
        @Styles.Render("~/Content/css/profile.css")
        @Styles.Render("~/Content/css/evenements.css")
        @Styles.Render("~/Content/css/forum.css")
        @Styles.Render("~/Content/css/blog.css")
        @Scripts.Render("~/bundles/modernizr")
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        <script src="//cdn.ckeditor.com/4.4.5/basic/ckeditor.js"></script>
        @Scripts.Render("~/Content/js/animo.js")
        @Scripts.Render("~/Content/js/raphael-min.js")
    </head>
    <body>
        <div class="main-wrapper">
            <header>
                <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#youp-menu">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#"></a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="youp-menu">
                            <ul class="nav navbar-nav">
                                <li @if (@ViewBag.ActiveMenu == "Home") { <text> class="active" </text>   }>@Html.ActionLink("Accueil", "Index", "Home")</li>
                                <li @if (@ViewBag.ActiveMenu == "Profile") { <text> class="active" </text>  }>@Html.ActionLink("Profile", "Index", "Profile")</li>
                                <li @if (@ViewBag.ActiveMenu == "Evenements") { <text> class="active" </text>  }>@Html.ActionLink("Evenements", "Index", "Evenements")</li>
                                <li @if (@ViewBag.ActiveMenu == "Forum") { <text> class="active" </text>  }>@Html.ActionLink("Forum", "Index", "Forum")</li>
                                <li @if (@ViewBag.ActiveMenu == "Blog") { <text> class="active" </text>  }>@Html.ActionLink("Blog", "Index", "Blog")</li>
                            </ul>
                            <form class="navbar-form navbar-left" role="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Rechercher">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="container-fluid nav-border">

                    </div>
                </nav>
            </header>
            <section class="content-wrapper">
                @RenderBody()
                <div class="push"></div>
            </section>
        </div>
        <footer class="footer">
            <div class="upper-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            Logo
                        </div>
                        <div class="col-sm-4">
                            <ul class="footer-links">
                                <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                                <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                                <li>@Html.ActionLink("Evenements", "Index", "Evenements")</li>
                                <li>@Html.ActionLink("Forum", "Index", "Forum")</li>
                                <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                            </ul>
                        </div>
                        <div class="col-sm-4">
                            <ul class="footer-links">
                                <li><a href="#">Contactez nous</a></li>
                                <li>
                                    Suivez Nous <br />
                                    <a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
                                    <a href="#"><i class="fa fa-twitter-square fa-2x"></i></a>
                                    <a href="#"><i class="fa fa-github-square fa-2x"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sub-footer">
                <div class="container">
                    <div class="row">
                        <span>&copy; @DateTime.Now.Year Y-Nov</span>
                        <a class="legal-link" href="/Mentions/"> Mentions Légales</a>
                    </div>
                </div>
            </div>
        </footer>
        @if (@ViewBag.ActiveMenu == "Home"){ @Scripts.Render("~/Content/js/home.js") }
        @if (@ViewBag.ActiveMenu == "Profile"){@Scripts.Render("~/Content/js/profile.js") }
        @if (@ViewBag.ActiveMenu == "Evenements"){@Scripts.Render("~/Content/js/evenements.js") }
        @if (@ViewBag.ActiveMenu == "Forum"){@Scripts.Render("~/Content/js/forum.js") }
        @if (@ViewBag.ActiveMenu == "Blog"){@Scripts.Render("~/Content/js/blog.js") }
        @Scripts.Render("~/Content/js/historique.js")
        @RenderSection("scripts", required: false)
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-56751698-1', 'auto');
            ga('send', 'pageview');

        </script>
    </body>
</html>
