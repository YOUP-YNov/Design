@{
    ViewBag.Title = "Login";
}

<div class="bodyProfil">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4 text-center" style="margin-top :30px; margin-bottom:30px;">
            <form role="form" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
            </form>

                <button type="submit" class="btn btn-primary">Se connecter</button>
                <div class="row">
                    
                    @using(Html.BeginForm("Create","Profile",FormMethod.Get))
                    {
                        <button  type="submit" class="btn btn-default" style="margin:20px;">Créer un compte</button>
                    }
                </div>

            
        </div>
        
</div>

