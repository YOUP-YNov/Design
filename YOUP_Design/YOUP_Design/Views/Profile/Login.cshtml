@model YOUP_Design.Models.Profile.LoginModelBinding
@{
    ViewBag.Title = "Login";
}

<div class="bodyProfil">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4 text-center" style="margin-top :30px; margin-bottom:30px;">
            <p class="error">@ViewBag.Error</p>
            @using (Html.BeginForm("Login", "Profile", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    @Html.TextBoxFor(x => x.Email, new { @class="form-control", placeholder="Enter email" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    @Html.PasswordFor(x => x.Password, new { @class="form-control", placeholder="Password"})
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
            }
            <div class="row">

                @using (Html.BeginForm("Create", "Profile", FormMethod.Get))
                {
                    <button type="submit" class="btn btn-default" style="margin:20px;">Créer un compte</button>
                }
            </div>
        </div>
    </div>
</div>
