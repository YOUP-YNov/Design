                                <option>Visite</option>
                                <option>Apéro entre amis</option>
                                <option>Marche a pied</option>
                            </select>
                        </div>*@
                </form>
            </div>
        </div>
        <div class="col-lg-2 text-center">
        </div>
    </div>
    <a href="javascript:history.back()" class="btn btn-default btn-defaultProfil">Retour</a>

    @if (Model.Amis.FirstOrDefault(x => x.Utilisateur_Id == idUser.Utilisateur_Id) == null)
    {
        <button type="submit" class="btn btn-primary btn-defaultProfil" style="margin-bottom : 30px;">Demander en ami</button>
    }

