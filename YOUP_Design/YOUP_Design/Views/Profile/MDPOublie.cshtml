@{
    ViewBag.Title = "MDPOublie";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ActiveMenu = "Profile";
}

<div class="bodyProfil">
    <div class="row">
        <h2>Mot de passe oublié</h2>
        <div class="col-lg-2 text-center">
        </div>
        <div class="col-lg-3 text-center noPadd">
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputEmail">Merci d'indiquer votre adresse email : </label>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-3 text-center noPadd">
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <input type="email" class="form-control alignMdp" id="exampleInputEmail">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-3 text-center noPadd">
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-2 text-center">
        </div>
    </div>
</div>

